# App environment: development | testing | production
APP_ENV=development

# Flask secret & database (REQUIRED in production)
SECRET_KEY=change-me
DATABASE_URL=postgresql+psycopg2://postgres:YOURPASS@localhost/electrical_estimator_saas

# Optional testing DB
TEST_DATABASE_URL=sqlite:///:memory:

# Logging
LOG_LEVEL=INFO

# Session / security
SESSION_COOKIE_SAMESITE=Lax

# Rate limiter (optional)
# If you want limits with spaces/semicolons, **quote the whole value** like below:
# RATELIMIT_DEFAULT="200 per day;50 per hour"
RATELIMIT_DEFAULT=

# Mail (optional)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=
MAIL_PASSWORD=

# Cache (optional)
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

